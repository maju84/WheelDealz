						"exec": [
							"// Parse the response body as JSON",
							"var jsonData = pm.response.json();",
							"",
							"// Test if the status code is 200 OK",
							"pm.test(\"Status code is 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"// Test if there are exactly 10 items in the JSON response",
							"pm.test(\"Should be exactly 10 items\", function () {",
							"    pm.expect(jsonData).to.be.an('array').and.to.have.lengthOf(10);",
							"});",
							"",
							"// Test if the first element has the minimum 'endedAt' value",
							"pm.test(\"First item should have the minimum 'endedAt'\", function () {",
							"    let endedAtValues = jsonData.map(a => new Date(a.endedAt));",
							"    let minEndedAt = new Date(Math.min.apply(null, endedAtValues));",
							"    pm.expect(new Date(jsonData[0].endedAt)).to.eql(minEndedAt);",
							"});",
							"",
							"// Test if the last element has the maximum 'endedAt' value",
							"pm.test(\"Last item should have the maximum 'endedAt'\", function () {",
							"    let endedAtValues = jsonData.map(a => new Date(a.endedAt));",
							"    let maxEndedAt = new Date(Math.max.apply(null, endedAtValues));",
							"    pm.expect(new Date(jsonData[jsonData.length - 1].endedAt)).to.eql(maxEndedAt);",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
